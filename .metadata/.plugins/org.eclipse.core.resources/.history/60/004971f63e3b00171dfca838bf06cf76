			TextField loanAmount = new TextField();
			TextField intRate = new TextField();
			TextField loanTerm = new TextField();
			TextField propertyTax = new TextField();
			TextField PMI = new TextField();
			TextField homeIns = new TextField();
			TextField monthlyHOA = new TextField();
			
			//grid layout
			grid.add(new Text("Home Value"), 0, 1);
			grid.add(homeValue, 1, 1);
			grid.add(new Text("Loan Amount"), 0, 2);
			grid.add(loanAmount, 1, 2);
			grid.add(new Text("Interest Rate"), 0, 3);
			grid.add(intRate, 1, 3);
			
			
			
			
			
			
			
			
			
			Scene scene = new Scene(grid,290,460, Color.web("#e2e2e2"));
			scene.getStylesheets().add(getClass().getResource("application.css").toExternalForm());
			
			/*Line line1 = new Line(0, 43, 290, 43);
			line1.setStroke(Color.WHITE);			
			Line line2 = new Line(0, 86, 290, 86);
			line2.setStroke(Color.WHITE);
			Line line3 = new Line(0, 129, 290, 129);
			line3.setStroke(Color.WHITE);
			Line line4 = new Line(0, 172, 290, 172);
			line4.setStroke(Color.WHITE);
			Line line5 = new Line(0, 215, 290, 215);
			line5.setStroke(Color.WHITE);
			Line line6 = new Line(0, 258, 290, 258);
			line6.setStroke(Color.WHITE);
			Line line7 = new Line(0, 301, 290, 301);
			line7.setStroke(Color.WHITE);
			Line line8 = new Line(0, 344, 290, 344);
			line8.setStroke(Color.WHITE);
			Line line9 = new Line(0, 387, 290, 387);
			line9.setStroke(Color.WHITE);
			grid.getChildren().addAll(line1, line2, line3, line4, line5, line6, line7, line8, line9);*/
			
			
			primaryStage.setScene(scene);
			primaryStage.show();
		} catch(Exception e) {
			e.printStackTrace();
		}
	}
	
	public static void main(String[] args) {
		launch(args);
	}
}
