package Problem_2;

public class run_clinic {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("Two doctors created:");

		
		Doctor d1 = new Doctor("Spock");
		Doctor d2 = new Doctor("Dolittle");
		
		d1.setOfficeVisitFee(200.0);
		d2.setOfficeVisitFee(175.0);
		
		d1.setSpecialty("Pediatrician");
		d2.setSpecialty("Witch");
		
		d1.writeOutput();
		d2.writeOutput();
		
		System.out.println("");
		System.out.println("Two patients created:");
		
		
		Patient p1 = new Patient("Calvin");
		Patient p2 = new Patient("Hobbes");
		
		p1.setIdNumber("123-45-6789");
		p2.setIdNumber("987-65-4321");
		
		p1.writeOutput();
		p2.writeOutput();
		

		System.out.println("");
		System.out.println("Three billing records created:");
		System.out.println("");
		
		Billing b1 = new Billing(d1.getName(), p1.getName(), d1.getOfficeVisitFee());
		b1.writeOutput(b1);
		
		Billing b2 = new Billing(d1.getName(), p1.getName(), d1.getOfficeVisitFee());
		b2.writeOutput(b2);
		
		Billing b3 = new Billing(d2.getName(), p1.getName(), d2.getOfficeVisitFee());
		b3.writeOutput(b3);
		

		
		System.out.println("");
		System.out.println("");
		System.out.println("First billing record equal to the second = " + b1.compareRecord(b2));
	}
	
}
